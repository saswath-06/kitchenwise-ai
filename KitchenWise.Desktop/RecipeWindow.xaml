<Window x:Class="KitchenWise.Desktop.RecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KitchenWise - Recipe Center"
        Height="800"
        Width="1200"
        MinHeight="600"
        MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2E7D32" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <TextBlock Text="🍳" FontSize="24" Margin="0,0,10,0"/>
                    <TextBlock Text="Recipe Center"
                              FontSize="20"
                              FontWeight="Bold"
                              Foreground="White"
                              VerticalAlignment="Center"/>
                    <TextBlock Text=" - AI-Powered Recipe Suggestions"
                              FontSize="14"
                              Foreground="#E8F5E8"
                              VerticalAlignment="Center"
                              Margin="10,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Column="1">
                    <TextBlock x:Name="RecipeCountText"
                              Text="No recipes generated"
                              Foreground="White"
                              VerticalAlignment="Center"
                              Margin="15,0,15,0"
                              FontSize="12"/>

                    <Button x:Name="BtnRefreshRecipes"
                            Content="🔄 Refresh"
                            Padding="12,6"
                            Margin="5"
                            Background="#2196F3"
                            Foreground="White"
                            BorderThickness="0"
                            Click="BtnRefreshRecipes_Click"/>

                    <Button x:Name="BtnBackToMain"
                            Content="← Back to Main"
                            Padding="12,6"
                            Margin="5"
                            Background="#2196F3"
                            Foreground="White"
                            BorderThickness="0"
                            Click="BtnBackToMain_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Recipe List and Controls -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Generation Controls -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="Recipe Generation" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                        <TextBlock Text="Cuisine:" FontSize="12" Margin="0,0,0,5"/>
                        <ComboBox x:Name="CuisineFilterCombo"
                                 Margin="0,0,0,10"
                                 SelectionChanged="CuisineFilterCombo_SelectionChanged">
                        </ComboBox>

                        <TextBlock Text="Max Recipes:" FontSize="12" Margin="0,0,0,5"/>
                        <TextBox x:Name="MaxRecipesText"
                                Text="5"
                                Padding="5"
                                Margin="0,0,0,15"/>

                        <Button x:Name="BtnGenerateRecipes"
                               Content="🍳 Generate AI Recipes"
                               Padding="15,8"
                               Background="#4CAF50"
                               Foreground="White"
                               BorderThickness="0"
                               FontWeight="Bold"
                               HorizontalAlignment="Stretch"
                               Click="BtnGenerateRecipes_Click"/>
                    </StackPanel>

                    <!-- Recipe List -->
                    <ScrollViewer Grid.Row="1">
                        <ListBox x:Name="RecipeListBox"
                                Background="Transparent"
                                BorderThickness="0"
                                SelectionChanged="RecipeListBox_SelectionChanged">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F8F8F8"
                                           CornerRadius="5"
                                           Padding="10"
                                           Margin="0,0,0,5">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}"
                                                      FontWeight="Bold"
                                                      FontSize="14"
                                                      TextWrapping="Wrap"/>

                                            <TextBlock Text="{Binding Description}"
                                                      FontSize="11"
                                                      Foreground="#666"
                                                      TextWrapping="Wrap"
                                                      Margin="0,2,0,5"/>

                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Cuisine}"
                                                          FontSize="10"
                                                          Background="#E3F2FD"
                                                          Padding="4,2"
                                                          Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding DifficultyLevel}"
                                                          FontSize="10"
                                                          Background="#FFF3E0"
                                                          Padding="4,2"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>

                    <!-- Recipe Stats -->
                    <Border Grid.Row="2" Background="#E8F5E8" CornerRadius="5" Padding="10" Margin="0,10,0,0">
                        <TextBlock x:Name="RecipeStatsText"
                                  Text="Generate recipes to get started"
                                  FontSize="12"
                                  Foreground="#2E7D32"
                                  HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Right Panel - Recipe Details -->
            <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="15" Margin="10,0,0,0">
                <ScrollViewer>
                    <StackPanel>
                        <!-- Recipe Header -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock x:Name="RecipeNameText"
                                      Text="Select a recipe to view details"
                                      FontSize="24"
                                      FontWeight="Bold"
                                      Grid.Column="0"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button x:Name="BtnAddToFavorites"
                                       Content="❤️ Favorite"
                                       Padding="10,6"
                                       Background="#FF9800"
                                       Foreground="White"
                                       BorderThickness="0"
                                       FontSize="12"
                                       Margin="5,0"
                                       Click="BtnAddToFavorites_Click"/>

                                <Button x:Name="BtnGenerateImage"
                                       Content="📷 Generate Image"
                                       Padding="10,6"
                                       Background="#FF9800"
                                       Foreground="White"
                                       BorderThickness="0"
                                       FontSize="12"
                                       Margin="5,0"
                                       Click="BtnGenerateImage_Click"/>
                            </StackPanel>
                        </Grid>

                        <!-- Recipe Details Panel -->
                        <StackPanel x:Name="RecipeDetailsPanel" Visibility="Collapsed">
                            <!-- Recipe Image -->
                            <Border x:Name="RecipeImageBorder"
                                   Background="#F0F0F0"
                                   CornerRadius="8"
                                   MaxHeight="300"
                                   MinHeight="150"
                                   MaxWidth="500"
                                   Margin="0,0,0,20"
                                   Visibility="Collapsed"
                                   HorizontalAlignment="Center">
                                <Grid>
                                    <TextBlock Text="📷 Recipe Image"
                                              FontSize="16"
                                              Foreground="#999"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                    <Image x:Name="RecipeImage"
                                          Stretch="Uniform"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          RenderOptions.BitmapScalingMode="HighQuality"/>
                                </Grid>
                            </Border>

                            <!-- Recipe Info Grid -->
                            <Grid x:Name="RecipeInfoGrid" Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Prep Time" FontSize="12" Foreground="#666"/>
                                    <TextBlock x:Name="PrepTimeText" Text="--" FontSize="14" FontWeight="Bold"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Cook Time" FontSize="12" Foreground="#666"/>
                                    <TextBlock x:Name="CookTimeText" Text="--" FontSize="14" FontWeight="Bold"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Servings" FontSize="12" Foreground="#666"/>
                                    <TextBlock x:Name="ServingsText" Text="--" FontSize="14" FontWeight="Bold"/>
                                </StackPanel>

                                <StackPanel Grid.Column="3">
                                    <TextBlock Text="Difficulty" FontSize="12" Foreground="#666"/>
                                    <TextBlock x:Name="DifficultyText" Text="--" FontSize="14" FontWeight="Bold"/>
                                </StackPanel>
                            </Grid>

                            <!-- Description -->
                            <TextBlock x:Name="RecipeDescriptionText"
                                      Text=""
                                      TextWrapping="Wrap"
                                      FontSize="14"
                                      Margin="0,0,0,20"
                                      LineHeight="22"/>

                            <!-- Ingredients -->
                            <StackPanel x:Name="IngredientsSection" Margin="0,0,0,20">
                                <TextBlock Text="Ingredients" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                                <ItemsControl x:Name="IngredientsList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                                <TextBlock Text="•" Margin="0,0,8,0" Foreground="#4CAF50"/>
                                                <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <!-- Instructions -->
                            <StackPanel x:Name="InstructionsSection" Margin="0,0,0,20">
                                <TextBlock Text="Instructions" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                                <ItemsControl x:Name="InstructionsList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                                                <Border Background="#4CAF50"
                                                       CornerRadius="10"
                                                       Width="20"
                                                       Height="20"
                                                       Margin="0,0,10,0">
                                                    <TextBlock Text="1"
                                                              Foreground="White"
                                                              FontSize="10"
                                                              FontWeight="Bold"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                                </Border>
                                                <TextBlock Text="{Binding}"
                                                          TextWrapping="Wrap"
                                                          VerticalAlignment="Top"
                                                          Width="650"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <!-- Nutrition Info -->
                            <StackPanel x:Name="NutritionSection" Margin="0,0,0,20" Visibility="Collapsed">
                                <TextBlock Text="Nutrition Information" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                                <Grid x:Name="NutritionGrid">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Calories" FontSize="12" Foreground="#666"/>
                                        <TextBlock x:Name="CaloriesText" Text="--" FontSize="14" FontWeight="Bold"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Protein" FontSize="12" Foreground="#666"/>
                                        <TextBlock x:Name="ProteinText" Text="--" FontSize="14" FontWeight="Bold"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Carbs" FontSize="12" Foreground="#666"/>
                                        <TextBlock x:Name="CarbsText" Text="--" FontSize="14" FontWeight="Bold"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="3">
                                        <TextBlock Text="Fat" FontSize="12" Foreground="#666"/>
                                        <TextBlock x:Name="FatText" Text="--" FontSize="14" FontWeight="Bold"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="4">
                                        <TextBlock Text="Fiber" FontSize="12" Foreground="#666"/>
                                        <TextBlock x:Name="FiberText" Text="--" FontSize="14" FontWeight="Bold"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>

                            <!-- Action Buttons -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                                <Button x:Name="BtnStartCooking"
                                       Content="🍳 Start Cooking &amp; Use Ingredients"
                                       Padding="20,12"
                                       Background="#4CAF50"
                                       Foreground="White"
                                       BorderThickness="0"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       Click="BtnStartCooking_Click"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Empty State -->
                        <StackPanel x:Name="EmptyStatePanel" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="🍳" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="No Recipe Selected"
                                      FontSize="18"
                                      FontWeight="Bold"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,5"/>
                            <TextBlock Text="Select a recipe from the list to view details"
                                      FontSize="14"
                                      Foreground="#666"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#E8E8E8" Padding="15,10">
            <Grid>
                <TextBlock Text="AI-Powered Recipe Generation with OpenAI GPT-4"
                          FontSize="12"
                          Foreground="#666"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center"/>

                <TextBlock x:Name="StatusText"
                          Text="Ready to generate recipes"
                          FontSize="12"
                          Foreground="#666"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
